<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/VietNamese"
        android:layout_width="362dp"
        android:layout_height="16dp"
        android:fontFamily="@font/times_new_roman"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/English" />

    <TextView
        android:id="@+id/English"
        android:layout_width="403dp"
        android:layout_height="26dp"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/times_new_roman"
        android:text="None"
        android:textColor="#876747"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/times_new_roman"
        android:text="Nghĩa: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/English" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/times_new_roman"
        android:text="Âm nhấn:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/Negative"
        android:layout_width="344dp"
        android:layout_height="15dp"
        android:fontFamily="@font/times_new_roman"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/VietNamese" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="62dp"
        android:layout_height="17dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/times_new_roman"
        android:text="Phiên âm:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/Spelling"
        android:layout_width="340dp"
        android:layout_height="18dp"
        android:layout_marginStart="0dp"
        android:fontFamily="@font/times_new_roman"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/Negative" />
</androidx.constraintlayout.widget.ConstraintLayout>