<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vocabularyapp">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/normal"
        android:roundIcon="@mipmap/icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.VocabularyApp">

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-1041515516282066~3905521307"/>

        <activity
            android:name=".Screen_learn_write"
            android:exported="true"
            android:screenOrientation="locked"/>
        <activity
            android:name=".Screen_check_vocabulary"
            android:exported="true"
            android:screenOrientation="locked"/>
        <activity
            android:name=".Learn_Vocabulary"
            android:exported="true"
            android:screenOrientation="locked"/>
        <activity
            android:name=".Screen_remove_vocabulary"
            android:exported="true"
            android:screenOrientation="locked"/>
        <activity
            android:name=".Screen_add_vocabulary"
            android:exported="true"
            android:screenOrientation="locked"/>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="locked">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>